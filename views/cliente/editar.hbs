{{> header}}

<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Editar Cliente</div>
      <div class="card-body">
        <form action="/Clientes/editarCliente" autocomplete="off" method="POST">
          {{{error}}}
          {{#if errores}}
            {{#each errores}}
              <div class='alert alert-danger' role='alert'>{{this}}</div>
            {{/each}}
          {{/if}}
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="exampleInputName">Nombre</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="nombre" value="{{cliente.firstname}}">
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Apellido</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="apellido" value="{{cliente.lastname}}">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputEmail1">descuentos</label>
                <input class="form-control" type="text" aria-describedby="emailHelp" name="descuento" value="{{cliente.decuentos}}">
              </div>
            </div>
          </div>
          <hr>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputCuit1">Mail</label>
                <input class="form-control" type="mail" aria-describedby="cuit2Help" value="{{cliente.mail}}" disabled>
                <input class="form-control" type="mail" aria-describedby="cuitHelp" name="cuit" value="{{cliente.mail}}" hidden>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <button class="btn btn-lg btn-outline-primary btn-block botonReg" type="submit">Guardar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- /.container -->
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
